extends layout

block content
  h1 #{title}: #{genre.name}
  if books.length > 0
    p Delete the following books before attemping to delete this genre
    dl
    each book in books
        dt
            a(href=book.url) #{book.title} - #{book.author.name}

  else
    p Do you really want to delete this Genre?
        
        form(method='POST' action='')
            div.form-group
                input#genre_id.form-control(type='hidden', name='genre_id', required='true', value=genre._id )
            button.btn.btn-primary(type='submit') Delete